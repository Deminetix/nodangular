doctype html
html(ng-app='app' ng-controller='Root')
    head
        title {{ title }}
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no')
        link(rel='stylesheet', href='styles/styles.css', type='text/css')
        link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Ubuntu+Condensed|Open+Sans:400italic,700italic,400,700', type='text/css')
    body
        if dev
            script(src='//localhost:35729/livereload.js')
            each src in scripts
                script(src=src)
        else
            script(src='scripts/scripts.min.js')
        div(ui-view)



